{
  "weatherstack": {
    "base_url": "http://api.weatherstack.com",
    "auth_type": "apikey",
    "auth_key": "APILAYER_KEY",
    "headers": {},
    "endpoints": {
      "current": "/current?access_key={auth_key}&query={query}"
    }
  },
  "coinbase": {
    "base_url": "https://api.coinbase.com/v2",
    "auth_type": "none",
    "headers": {},
    "endpoints": {
      "price": "/prices/{pair}/spot"
    }
  },
  "huggingface_summarize": {
    "base_url": "https://api-inference.huggingface.co/models/facebook/bart-large-cnn",
    "auth_type": "bearer",
    "auth_key": "HF_KEY",
    "headers": {"Authorization": "Bearer {auth_key}"},
    "method": "POST"
  }
}
